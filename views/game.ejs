<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hash Game</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <main>
      <div id="app">
        <div class="container" v-if="game">
          <p>{{ game._player1._name }}</p>
          <p>{{ game._player2._name }}</p>
          <p>{{ message }}</p>

          <div class="board">
            <button v-for="squares in game._board._squares" @click="plays(squares)">
              {{ squares.turn }}
            </button>
          </div>
          
        </div>

        <div class="signup" v-if="!game && !gameVerify">
          <input class="signup" v-model="playerName" aria-placeholder="Name">
          <button @click="start()" class="btn">play</button>  
        </div>
      </div>
    </main>
</body>
<script src="/socket.io/socket.io.js"></script>
